<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import View.MazeDisplayer?>
<BorderPane prefHeight="566.0" prefWidth="860.0" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <left>
        <VBox prefHeight="200.0" prefWidth="178.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints />
                    </rowConstraints>
                    <Button fx:id="Solve" cancelButton="true" disable="true" onAction="#solveMaze" prefHeight="27.0" prefWidth="167.0" text="Solve Maze" GridPane.columnSpan="2" GridPane.rowIndex="2" />
               <Label fx:id="playerRow" GridPane.columnIndex="1" />
               <Label fx:id="playerCol" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Label text="Player Row:" />
               <Label text="Player Col:" GridPane.rowIndex="1" />
                <Button fx:id="music" mnemonicParsing="false" onAction="#setMusic" prefHeight="27.0" prefWidth="167.0" text="Turn Off Music!" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                </GridPane>

            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="New" mnemonicParsing="false" onAction="#generateMaze" text="New" />
                                <MenuItem fx:id="Save" mnemonicParsing="false" onAction="#saveMaze" text="Save" />
                                <MenuItem fx:id="Load" mnemonicParsing="false" onAction="#loadMaze" text="Load" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <MenuItem fx:id="Properties" mnemonicParsing="false" onAction="#setProperties" text="Properties" />
                            </items>

                        </Menu>
                        <Menu fx:id="ExitMenu" mnemonicParsing="false" text="Exit">
                            <items>
                                <MenuItem fx:id="Exit" mnemonicParsing="false" onAction="#exitMaze" text="Exit" />
                            </items>
                        </Menu>
                        <Menu fx:id="Help" mnemonicParsing="false" text="Help">
                        </Menu>
                        <Menu fx:id="About" mnemonicParsing="false" text="About">
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane fx:id="mazePane" BorderPane.alignment="CENTER">
            <children>
                <MazeDisplayer fx:id="mazeDisplayer" imageFileNameCharBack="resources/images/back.jpg" imageFileNameCharFront="resources/images/front.jpg" imageFileNameCharLeft="resources/images/left.jpg" imageFileNameCharPath="resources/images/path.jpg" imageFileNameCharRight="resources/images/right.jpg" imageFileNameFinish="resources/images/ball.jpg" imageFileNameSolution="resources/images/sol.jpg" imageFileNameWall="resources/images/tree.jpg" imageFileNameWin="resources/images/win.jpg" onKeyPressed="#keyPressed" />
            </children>
        </Pane>
    </center>
   <bottom>
      <VBox prefHeight="9.0" prefWidth="860.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
